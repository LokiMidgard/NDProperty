    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>NDProperty.Generator.Attributes</PackageId>
    <PackageVersion>0.0.2</PackageVersion>
    <Authors>Patrick Kranz</Authors>
    <PackageLicenseUrl>https://github.com/LokiMidgard/NDProperty/blob/master/license.md</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/LokiMidgard/NDProperty</PackageProjectUrl>
    <RepositoryUrl>https://github.com/LokiMidgard/NDProperty.git</RepositoryUrl>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
    <Description>Attributes used for code generation of NDProperty</Description>
    <PackageReleaseNotes>Initial release</PackageReleaseNotes>
    <Copyright>Patrick Kranz</Copyright>
    <PackageTags>NDProperty</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="CodeGeneration.Roslyn.Attributes" Version="0.3.9" />
    <ProjectReference Include="..\NDProperty.Generator\NDProperty.Generator.csproj" />
    <ProjectReference Include="..\NDProperty.Core\NDProperty.Core.csproj" />
  </ItemGroup>
  
</Project>